@model Logic.ViewModels.PaginationViewModel

<div class="d-flex justify-content-between align-items-center flex-wrap font-weight-bold">
    <div class="d-flex flex-wrp py-2 mr-3">
        @if (Model.PageNumber > 1)
        {
            if (Model.PageNumber - 1 > 1)
            {
                <a href="JavaScript:Void(0)" onclick="getDataTable(1)" class="btn btn-icon btn-sm btn-light mr-2 my-1 text-hover-light bg-hover-primary"><i class="ki ki-bold-double-arrow-next icon-xs"></i></a>
            }
            <a href="#" onclick="getDataTable(@(Model.PageNumber-1))" class="btn btn-icon btn-sm btn-light mr-2 my-1 text-hover-light bg-hover-primary"><i class="ki ki-bold-arrow-next icon-xs"></i></a>
            @*if (Model.PageNumber > 5)
            {
                <a href="JavaScript:Void(0)" onclick="getDataTable(@(Model.PagesList[0] -1))" class="btn btn-icon btn-sm border-0 btn-text-dark-65 btn-hover-primary mr-2 my-1">...</a>
            }*@
        }
        @foreach (var pageInt in Model.PagesList)
        {
            if (pageInt == Model.PageNumber)
            {
                <a href="JavaScript:Void(0)" onclick="getDataTable(@(pageInt))" class="btn btn-icon btn-sm border-0 btn-text-dark-65 btn-hover-primary active mr-2 my-1">@pageInt</a>
            }
            else
            {
                <a href="JavaScript:Void(0)" onclick="getDataTable(@(pageInt))" class="btn btn-icon btn-sm border-0 btn-text-dark-65 btn-hover-primary mr-2 my-1">@pageInt</a>
            }
        }
        @*@if (Model.PagesList[Model.PagesList.Count - 1] < Model.NumberOfPages && Model.PagesList.Count > 4)
        {
            <a href="JavaScript:Void(0)" onclick="getDataTable(@(Model.PagesList[Model.PagesList.Count - 1]+1))" class="btn btn-icon btn-sm border-0 btn-text-dark-65 btn-hover-primary mr-2 my-1">...</a>
        }*@
        @if (Model.NumberOfPages > 1 && Model.PageNumber < Model.NumberOfPages)
        {
            <a href="JavaScript:Void(0)" onclick="getDataTable(@(Model.PageNumber+1))" class="btn btn-icon btn-sm btn-light mr-2 my-1 text-hover-light bg-hover-primary"><i class="ki ki-bold-arrow-back icon-xs"></i></a>
            @if (Model.PageNumber < Model.NumberOfPages - 1)
            {
                <a href="JavaScript:Void(0)" onclick="getDataTable(@(Model.NumberOfPages))" class="btn btn-icon btn-sm btn-light mr-2 my-1 text-hover-light bg-hover-primary"><i class="ki ki-bold-double-arrow-back icon-xs"></i></a>
            }
        }
    </div>
    <div class="d-flex align-items-center py-3">
        <select onchange="setItemsCount()" id="select_count" class="form-control form-control-sm text-success font-weight-bold mr-4 border-0 bg-dark-o-20 text-dark-50 text-hover-light bg-hover-primary" style="width: 60px;">
            <option value="5">5</option>
            <option value="10">10</option>
            <option value="20">20</option>
            <option value="30">30</option>
            <option value="50">50</option>
            <option value="100">100</option>
        </select>
        @if (Model.FromItem < Model.ToItem)
        {
            <span class="text-muted">@string.Format("نمایش {0} تا {1} از {2} رکورد", Model.FromItem, Model.ToItem, Model.ItemCount)</span>
        }
        else
        {
            <span class="text-muted">@string.Format("نمایش {0} از {1} رکورد", Model.FromItem, Model.ItemCount)</span>
        }
    </div>
</div>